<mujoco model="inverted pendulum">
	<compiler inertiafromgeom="true"/>
	<default>
		<joint armature="0" damping="1" limited="true"/>
		<geom contype="0" friction="1 0.1 0.1" rgba="0.7 0.7 0 1"/>
	</default>
	<option gravity="0 0 -9.81" integrator="RK4" timestep="0.00005"/>
	<asset>
	    <texture type="skybox" builtin="gradient" rgb1="0.3 0.5 0.7" rgb2="0 0 0" width="512" height="3072" />
	</asset>
  	<visual>
		<headlight diffuse="0.6 0.6 0.6" ambient="0.3 0.3 0.3" specular="0 0 0" />
		<rgba haze="0.15 0.25 0.35 1" />
	    <global offheight="2160" offwidth="3840"/>
    	<quality offsamples="8"/>
	</visual>
	<worldbody>
    	<light name="spotlight0" mode="targetbodycom" target="cart" pos="0 0 10" cutoff="60" />
		<light name="spotlight1" mode="targetbodycom" target="cart" pos="0.5 0 10" cutoff="60" />
		<geom name="rail" pos="0 0 0" quat="0.707 0 0.707 0" rgba="0.3 0.3 0.7 1" size="0.02 3" type="capsule"/>
		<body name="cart" pos="0 0 0">
			<joint axis="1 0 0" limited="true" name="slider" pos="0 0 0" range="-3 3" type="slide"/>
			<geom name="cart" pos="0 0 0" quat="0.707 0 0.707 0" size="0.1 0.1" type="capsule"/>
			<body name="pole" pos="0 0 0">
				<joint axis="0 1 0" name="hinge" pos="0 0 0" range="-1800 1800" type="hinge"/>
				<geom name="pole" type="capsule" size="0.049 0.3" pos="0 0 0.3" axisangle="1 0 0 0" rgba="0 0.7 0.7 1"/>
			</body>
		</body>
	</worldbody>
	<actuator>
		<motor joint="slider" gear="1" name="slide"/>
	</actuator>
  <keyframe>
    <key name="up" 
      qpos="0 0.5"
      qvel="0 0"
    />
  </keyframe>
</mujoco>